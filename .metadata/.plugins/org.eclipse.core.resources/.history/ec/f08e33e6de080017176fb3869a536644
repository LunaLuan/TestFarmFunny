#ifndef SOUNDSUBJECT_H_
#define SOUNDSUBJECT_H_

#include "OnSoundListener.h"

class SoundSubject {
public:
	SoundSubject();

	virtual void sound() = 0;
	virtual void addOnSoundListener(OnSoundListener *onSoundListener) = 0;
	virtual void removeOnSoundListener(OnSoundListener *onSoundListener) = 0;

	void notifyListener();

	virtual ~SoundSubject();

protected:
	vector<class OnSoundListener*> listeners;
};

#endif /* SOUNDSUBJECT_H_ */
